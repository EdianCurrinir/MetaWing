#edit-modal.modal.fade{'aria-hidden' => 'true', :role => 'dialog', :tabindex => '-1'}
  = form_for upgrade do |f|
    .modal-dialog{:role => 'document'}
      .modal-content
        .modal-header
          %h5.modal-title= t('.title')
          %button.close{'aria-label' => t('.close'), 'data-bs-dismiss' => 'modal', :type => 'button'}
            %span{'aria-hidden' => 'true'} Ã—
        .modal-body
          %hr
          = f.fields_for :upgrade_type do |ff|
            = ff.hidden_field :id
            = ff.label :font_icon_class
            = ff.text_field :font_icon_class, class: 'form-control'
        .modal-footer
          %button.btn.btn-secondary{'data-bs-dismiss' => 'modal', :type => 'button'}= t('.close')
          = f.submit t('.save'), class: 'btn btn-primary'
