- content_for :title do
  = t('.title')

- content_for :export_button do
  .float-md-end
    = link_with_filter_to pilots_path(format: :csv), target: '_blank', class: 'btn btn-primary btn-sm' do
      = fa_icon 'table'
      = t('.export_csv')
    &nbsp;
    = link_with_filter_to pilots_path(format: :json), target: '_blank', class: 'btn btn-primary btn-sm' do
      = fa_icon 'cloud-download'
      = t('.export_json')

= render '/pilots/table', pilots: @view.pilots
