#edit-modal.modal.fade{'aria-hidden' => 'true', :role => 'dialog', :tabindex => '-1'}
  = form_for ship_combo do |f|
    .modal-dialog{:role => 'document'}
      .modal-content
        .modal-header
          %h5.modal-title= t('.title')
          %button.close{'aria-label' => t('.close'), 'data-bs-dismiss' => 'modal', :type => 'button'}
            %span{'aria-hidden' => 'true'} Ã—
        .modal-body
          %p= t('.explanation')
          = label_tag :name_suggestion
          = text_field_tag :name_suggestion, '', class: 'form-control'
          = label_tag :comment
          = text_field_tag :comment, '', class: 'form-control'
        .modal-footer
          %button.btn.btn-secondary{'data-bs-dismiss' => 'modal', :type => 'button'}= t('.close')
          = f.submit t('.save'), class: 'btn btn-primary'
